@model IEnumerable<EventConference.Entities.Models.Event>
@{
    ViewData["Title"] = "Select";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <form method="post">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light my-4">Select event data</h3>
                    </div>
                    <div class="card-body">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label class="small mb-1">Event</label>
                            <select class="form-control">
                                @foreach (var e in Model)
                                {
                                    <option value="@e.Id">@Html.Raw(e.Title)</option>
                                }
                            </select>
                            @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
                        </div>
                    </div>
                    <div class="card-footer">
                        <input class="btn btn-primary" type="submit" value="Submit">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

