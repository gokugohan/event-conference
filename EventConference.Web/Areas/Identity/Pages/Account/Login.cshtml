@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5">
                    <div class="card shadow-lg border-0 rounded-lg mt-5">
                        <div class="card-header">
                            <h3 class="text-center font-weight-light my-4">Login</h3>
                        </div>
                        <div class="card-body">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <form method="post">
                                <div class="form-group">
                                    <label class="small mb-1" asp-for="Input.Email">Email</label>
                                    <input asp-for="Input.Email" class="form-control py-4" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password" class="small mb-1"></label>
                                    <input asp-for="Input.Password" class="form-control py-4" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                                    <a asp-page="./ForgotPassword" class="small">Forgot Password?</a>
                                    <input class="btn btn-primary" type="submit" value="Log In">
                                </div>

                            </form>
                        </div>
                        <div class="card-footer text-center">
                            <div class="small"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Need an account? Sign up!</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
